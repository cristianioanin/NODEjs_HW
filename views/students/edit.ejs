<% include ../partials/header %>

<div class="row justify-content-center">
  <div class="col-md-12 text-center">
    <h1 class="h3 mb-3 font-weight-normal text-center">Edit Student:
      <%= student.fullName %>
    </h1>
  </div>

  <div class="col-md-9 col-sm-12">
    <form action="/students/<%= student.id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="firstName">First name</label>
        <input class="form-control" type="text" name="firstName" value="<%= student.firstName %>" id="firstName"
          autofocus required>
      </div>
      <div class="form-group">
        <label for="lastName">Last name</label>
        <input class="form-control" type="text" name="lastName" value="<%= student.lastName %>" id="lastName" required>
      </div>
      <h5>Gender</h5>
      <div class="custom-control custom-radio">
        <input type="radio" id="male" name="gender" class="custom-control-input" value="male" <%=student.gender==='male'
          ? 'checked' : '' %>>
        <label class="custom-control-label" for="male">Male</label>
      </div>
      <div class="custom-control custom-radio">
        <input type="radio" id="female" name="gender" class="custom-control-input" value="female" <%=student.gender==='female'
          ? 'checked' : '' %>>
        <label class="custom-control-label" for="female">Female</label>
      </div>
      <h5>Grades</h5>
      <div class="form-group">
        <label for="biology" class="w-25">Biology</label>
        <input class="form-control d-inline w-25" type="number" min="1" max="10" name="biology" value="<%= grades.biology %>"
          id="biology" required>
      </div>
      <div class="form-group">
        <label for="mathematics" class="w-25">Mathematics</label>
        <input class="form-control d-inline w-25" type="number" min="1" max="10" name="mathematics" value="<%= grades.mathematics %>"
          id="mathematics" required>
      </div>
      <div class="form-group">
        <label for="science" class="w-25">Science</label>
        <input class="form-control d-inline w-25" type="number" min="1" max="10" name="science" value="<%= grades.science %>"
          id="science" required>
      </div>
      <div class="form-group">
        <label for="socialStudies" class="w-25">Social Studies</label>
        <input class="form-control d-inline w-25" type="number" min="1" max="10" name="socialStudies" value="<%= grades.socialStudies %>"
          id="socialStudies" required>
      </div>
      <button class="btn btn-lg btn-outline-success btn-block">Update</button>
    </form>
    <div class="mt-3">
      <a class="text-secondary" href="/students">&larr; Go Back</a>
    </div>
  </div>

</div>
<% include ../partials/footer %>