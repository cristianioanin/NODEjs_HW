<script>
  const languageCookie = document.cookie.split(';').filter((item) => item.includes('lang_preferences='))[0];
  const preferredLanguage = languageCookie ? languageCookie.split('=')[1] : null;

  const highlightSetLanguage = () => {
    if (preferredLanguage) {
      const buttonEl = document.querySelector(`.btn-${preferredLanguage}`);
      buttonEl.classList.add('lang-active');
    }
  }
  highlightSetLanguage();

</script>

